#!/usr/bin/env bash

set -euo pipefail

# Install Deno if not already installed
if command -v deno &>/dev/null; then
  echo ">> Deno is already installed. Skipping..."
else
  echo ">> Installing Deno..."
  curl -fsSL https://deno.land/install.sh | sh
  export PATH="$HOME/.deno/bin:$PATH"  # ensure deno is usable in this session
fi

# Install Bun if not already installed
if command -v bun &>/dev/null; then
  echo ">> Bun is already installed. Skipping..."
else
  echo ">> Installing Bun..."
  curl -fsSL https://bun.sh/install | bash
  export PATH="$HOME/.bun/bin:$PATH"  # ensure bun is usable in this session
fi
